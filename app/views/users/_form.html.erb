<!--Users/new => Users/_form-->
<div class="row">
  <div class="col-md-6 col-md-offset-3">

  <%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <h2>Errors</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
        </ul>
   <% end %>
  <table>
    <tr><td><strong><%= f.label :name %></strong>
    <%= f.text_field :name %></td></tr>
    <tr><td> </td></tr>
    <tr><td> </td></tr>
    <tr><td><strong><%= f.label :email %></strong>
    <%= f.email_field :email %></td></tr>
    <tr><td> </td></tr>
    <tr><td> </td></tr>
    <tr><td><strong><%= f.label :password %></strong>
    <%= f.password_field :password %></td></tr>
    <tr><td> </td></tr>
    <tr><td> </td></tr>
    <tr><td><%= f.submit %></td></tr><!--Users/show-->
</table>
<% end %>
</div>
  </div>
