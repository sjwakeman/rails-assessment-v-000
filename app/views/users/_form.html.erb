<%= form_for @user do |f| %>
  <p><%= f.label :name %>:</p>
  <p><%= f.text_field :name %></p>
  <p><%= f.label :email %></p>
  <p><%= f.text_field :email %></p>
  <p><%= f.label :password %> </p>
  <p><%= f.text_field :password %></p>

  <p><%= f.submit %></p>
<% end %>
