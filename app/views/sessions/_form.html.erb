<%= form_for @user do |f| %>
  <% if @user.errors.any? %> 
    <h2>Errors</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    </ul>
  <% end %>
  <table>
    <tr><td><strong><%= f.label :name %> :</strong>
    <%= f.text_field :name %></td></tr>
    <tr><td> </td></tr>
    <tr><td> </td></tr>

    <tr><td><strong><%= f.label :email %> :</strong>
    <%= f.text_field :email %></td></tr>
    <tr><td> </td></tr>
    <tr><td> </td></tr>

    <tr><td><strong><%= f.label :password %> :</strong>
    <%= f.text_field :password %></td></tr>
    <tr><td> </td></tr>
    <tr><td> </td></tr>
    
    <tr><td><%= f.submit %></td></tr>
  </table>
  <% end %>


